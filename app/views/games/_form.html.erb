<%= form_with(model: game, local: true) do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :game_title %>
  </div>

  <div class="field">
    <%= form.label :developer %>
    <%= form.text_field :developer, id: :game_developer %>
  </div>

  <div class="field">
    <%= form.label :publisher %>
    <%= form.text_field :publisher, id: :game_publisher %>
  </div>

  <div class="field">
    <%= form.label :genre %>
    <%= form.text_field :genre, id: :game_genre %>
  </div>

  <div class="field">
    <%= form.label :year %>
    <%= form.text_field :year, id: :game_year %>
  </div>

  <div class="field">
    <%= form.label :played_on %>
    <%= form.text_field :played_on, id: :game_played_on %>
  </div>

  <div class="field">
    <%= form.label :rating %>
    <%= form.text_field :rating, id: :game_rating %>
  </div>

  <div class="field">
    <%= form.label :review %>
    <%= form.text_field :review, id: :game_review %>
    <trix-editor input="game_review"></trix-editor>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
